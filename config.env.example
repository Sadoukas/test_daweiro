# Configuration file for TikTok Scraper
# Copy this file to .env and modify the values as needed

# TikTok account to scrape
TIKTOK_USERNAME=hugodecrypte

# Scraping configuration
MAX_VIDEOS=100
SCROLL_DELAY=3
EXTRACTION_DELAY=1
MAX_RETRIES=5

# Timeouts (in seconds)
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=10
SCROLL_TIMEOUT=5

# Output configuration
OUTPUT_DIR=data
CSV_FILENAME=tiktok_videos.csv
LOG_LEVEL=INFO

# Browser configuration
HEADLESS_MODE=true
BROWSER_TYPE=chromium
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080

# Rate limiting
MIN_DELAY_BETWEEN_ACTIONS=2
MAX_DELAY_BETWEEN_ACTIONS=5
